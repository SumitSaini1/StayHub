<% layout("layouts/boilerplatecode") -%>
    <div class="container vh-center">
        <div class="stayhub-card">


            <div class="text-center mb-3">

                <img src="/images/stayhub_logo.png" alt="StayHub Logo" class="stayhub-logo mb-2">


                <div class="logo-title">
                    <h1 class="h4"><span class="stay">Stay</span><span class="hub">Hub</span></h1>
                    <div class="muted small">Create your account to start exploring stays.</div>
                </div>
            </div>




            <form action="/signup" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" placeholder="Enter Username" name="username" id="username" class="form-control"
                        required>
                    <div class="valid-feedback">Looks Good.</div>
                    <div class="invalid-feedback">Not Looks Good.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" placeholder="Enter email" name="email" id="email" class="form-control" required>
                    <div class="valid-feedback">Looks Good.</div>
                    <div class="invalid-feedback">Not Looks Good.</div>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <label for="password" class="form-label mb-0">Password</label>
                        <div class="suggest">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                                <path d="M12 11a3 3 0 100-6 3 3 0 000 6z" stroke="#f1c40f" stroke-width="1.6"
                                    stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            Suggest Strong Password
                        </div>
                    </div>

                    <div class="position-relative">
                        <input type="password" placeholder="Enter password" name="password" id="password"
                            class="form-control pe-5" required>

                    </div>

                    <div class="valid-feedback">Looks Good.</div>
                    <div class="invalid-feedback">Not Looks Good.</div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="peach-btn">SignUp</button>
                </div>

                <div class="text-center mt-2 small muted">
                    Already have an account? <a href="/login" class="small-link">Login</a>
                </div>
            </form>

        </div>
    </div>